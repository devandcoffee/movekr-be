  "host": "localhost:8000",
  "basePath": "/api/v1",
  "schemes": ["http"],
  "paths": {
    "/users": {
      "get": {
        "tags": [],
        "summary": "Get all users",
        "description": "",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ArrayOfOutputUser"
            }
          }
        }
      }
    },
    "/users/create": {
      "post": {
        "summary": "Add a new user",
        "description": "",
        "operationId": "addUser",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User object that needs to be added",
            "required": true,
            "schema": { "$ref": "#/definitions/InputUser" }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/OutputUser" }
          },
          "405": { "description": "Invalid input" }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "summary": "Find user by ID",
        "description": "Returns a single user",
        "operationId": "getUserById",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of user to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": { "$ref": "#/definitions/OutputUser" }
          },
          "400": { "description": "Invalid ID supplied" },
          "404": { "description": "User not found" }
        }
      }
    }
  },
  "definitions": {
    "InputUser": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "mail": { "type": "string" },
        "password": { "type": "string" }
      }
    },
    "OutputUser": {
      "type": "object",
      "properties": {
        "id": { "type": "integer", "format": "int64" },
        "name": { "type": "string" },
        "mail": { "type": "string" }
      }
    },
    "ArrayOfOutputUser": {
      "type": "array",
      "items": { "$ref": "#/definitions/OutputUser" }
    }
  },
